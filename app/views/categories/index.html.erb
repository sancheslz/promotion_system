<% if @categories.blank? %>
    <div>No records</div> 
<% else %>
    <% @categories.each do |category| %>
        <div>
            <%= link_to category.name, category %> - <%= category.code %> <%= link_to  "Edit Category", edit_category_path(category) %>
        </div>
    <% end %>
<% end %>

<%= link_to  "New Category", new_category_path %>